<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:padding="@dimen/dimen_padding"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/iw_detail_activity_poster"
        android:layout_marginBottom="@dimen/general_margin"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tw_detail_activity_rating"
            android:textSize="@dimen/text_size_large"
            android:fontFamily="monospace"
            android:text="@string/detail_activity_avg_rating"
            android:layout_marginBottom="@dimen/general_margin"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tw_detail_activity_release_date"
            android:textSize="@dimen/text_size_large"
            android:fontFamily="monospace"
            android:text="@string/detail_activity_release_date"
            android:layout_marginBottom="@dimen/general_margin"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tw_detail_activity_title"
            android:fontFamily="monospace"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/general_margin"
            />


            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tw_detail_activity_overview"
                    android:fontFamily="monospace"
                    android:textSize="@dimen/plot_text_size" />

            </ScrollView>

    </LinearLayout>

</LinearLayout>